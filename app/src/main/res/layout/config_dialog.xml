<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:background="@drawable/exit_dialog_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="32dp">

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Confirm"
        android:textColor="#ff2c2c2c"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Confirm to logout of VPN?"
        android:textColor="#ff727272"
        android:textSize="16sp" />

    <LinearLayout
        android:paddingStart="26dp"
        android:paddingEnd="26dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/logout_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/exit_no_btn_bg"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#2c2c2c"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/exit_yes_btn_bg"
            android:gravity="center"
            android:text="@string/server_yes"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>