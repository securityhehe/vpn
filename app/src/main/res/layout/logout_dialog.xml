<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:background="@drawable/exit_dialog_bg"
    android:gravity="center_horizontal"
    android:paddingBottom="32dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logout_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/logout_logo" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Confirm"
        android:textColor="#ff2c2c2c"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Confirm to logout of VPN?"
        android:textColor="#ff727272"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="34dp"
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/exit_yes_btn_bg"
        android:gravity="center"
        android:text="@string/exit_yes"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/logout_cancel"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/exit_no_btn_bg"
        android:gravity="center"
        android:text="Cancel"
        android:textColor="#2c2c2c"
        android:textSize="17sp" />


</LinearLayout>